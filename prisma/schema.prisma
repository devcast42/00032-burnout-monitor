generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== Core: Users & Roles ==========

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String
  role         String    @default("user")
  specialty    String?   @default("MÃ©dico")
  managerId    String?   @map("manager_id")
  passwordHash String    @map("password_hash")

  manager      User?     @relation("ManagerSubordinates", fields: [managerId], references: [id])
  subordinates User[]    @relation("ManagerSubordinates")
  person       Person?
  surveys      Survey[]
  appointments Appointment[] @relation("PatientAppointments")
  doctorAppointments Appointment[] @relation("DoctorAppointments")
  createdAt    DateTime? @default(now()) @map("created_at")

  @@map("users")
}

model Person {
  id               String  @id @default(uuid())
  userId           String  @unique @map("user_id")
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Burnout static profile fields (coded as integers)
  gender           Int?
  ageCode          Int?    @map("age_code")
  bmi              Int?
  designation      Int?
  specialization   Int?
  workingPlace     Int?    @map("working_place")
  duration         Int?
  privatePractice  Int?    @map("private_practice")
  workingHour      Int?    @map("working_hour")
  weeklyVacation   Int?    @map("weekly_vacation")
  maritalStatus    Int?    @map("marital_status")
  income           Int?
  familyMembers    Int?    @map("family_members")
  liabilities      Int?
  stayingWithFamily Int?   @map("staying_with_family")

  // Scheduling fields (for users with role "doctor")
  workStartHour Int?        @default(8) @map("work_start_hour")
  workEndHour   Int?        @default(20) @map("work_end_hour")
  slotDuration  Int?        @default(60) @map("slot_duration")

  @@map("persons")
}

// ========== Encuesta Diaria ==========

model Survey {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      String
  score     Int
  answers   Json
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamp(6)

  @@map("surveys")
}

// ========== Appointments & Video Calls ==========

model Appointment {
  id            String            @id @default(uuid())
  doctorId      String            @map("doctor_id")
  doctor        User              @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patientName   String            @map("patient_name")
  patientEmail  String            @map("patient_email")
  patient       User?             @relation("PatientAppointments", fields: [patientEmail], references: [email])
  date          DateTime
  durationMin   Int               @default(60) @map("duration_min")
  status        AppointmentStatus @default(SCHEDULED)
  jitsiRoomName String            @unique @map("jitsi_room_name")
  recording     Recording?
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  @@index([doctorId])
  @@index([patientEmail])
  @@index([date])
  @@map("appointments")
}

enum AppointmentStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Recording {
  id            String      @id @default(uuid())
  appointmentId String      @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  audioUrl      String?
  transcript    String?
  transcribedAt DateTime?
  createdAt     DateTime    @default(now())

  @@map("recordings")
}
